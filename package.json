{
  "name": "mern-2025",
  "version": "0.1.0",
  "description": "Example of a MERN application.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "setup-project": "npm i && cd client && npm i",
    "server-nodemon": "nodemon server.js",
    "server-watch": "node --watch server.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently --kill-others-on-fail \"npm run server-watch\" \"npm run client\"",
    "setup-production-app": "npm i && cd client && npm i && npm run build"
  },
